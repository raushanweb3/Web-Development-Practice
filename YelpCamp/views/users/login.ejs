<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center my-5">
        <div class="row col-md-6">
            <div class="">
                <div class="card shadow">
                    <div class="card-body">
                            <img src="https://images.unsplash.com/photo-1509822929063-6b6cfc9b42f2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&h=300&q=80" alt="" class="card-img-top">
                            <h5 class="card-title text-center mt-3">Login</h5>


                        <form action="/login" method="POST" novalidate class="needs-validation">
                            <div class="mb-2">
                                <label class="form-label" for="username">Username: </label>
                                <input class="form-control" type="text" id="username" name="username" required>
    
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div id="validationServerTitleFeedback" class="invalid-feedback">
                                    Please enter a valid username.
                                </div>
                            </div>
    
                            <div class="mb-2">
                                <label class="form-label" for="password">Password: </label>
                                <input class="form-control" type="password" id="password" name="password" required>
    
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div id="validationServerTitleFeedback" class="invalid-feedback">
                                    Please enter a valid password.
                                </div>
                            </div>
    
                            <div class="mt-3 d-grid gap-2">
                                <button class="btn btn-success btn-block">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>