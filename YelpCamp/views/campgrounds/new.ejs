<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3 mt-5">
            <form action="/campgrounds" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Campground Title: </label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="validationServerTitleFeedback" class="invalid-feedback">
                        Please enter a Title.
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="validationServerLocationFeedback" class="invalid-feedback">
                        Please enter a location.
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="validationServerImageFeedback" class="invalid-feedback">
                        Please enter an image link.
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="price">Campground Price: </label>
                    <div class="input-group" id="price">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input type="text" class="form-control" name="campground[price]" placeholder="price/day"
                            aria-label="Username" aria-describedby="basic-addon1" required>

                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div id="validationServerPriceFeedback" class="invalid-feedback">
                            Please enter a price.
                        </div>
                    </div>
                </div>

                <div class="mb-2">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" rows="3"
                        required></textarea>

                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div id="validationServerDescriptionFeedback" class="invalid-feedback">
                        Please enter a description.
                    </div>

                </div>

                <div class="mt-2 mb-5">
                    <button class="btn btn-success">Add Campgrounds</button>
                </div>


            </form>
        </div>
    </div>


    <!-- Javascript for bootstrap form validation formatting moved to boilerplate -->